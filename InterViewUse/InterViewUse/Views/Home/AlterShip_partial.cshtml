@model InterViewUse.Models.Shippers
@using (Html.BeginForm("AlterShip_partial", "Home", FormMethod.Post))
{
    <h5 id="createnewoneTitle">修改公司資料</h5>
    <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
    <div class="form-group">
        @Html.LabelFor(s => s.CompanyName):
        @Html.TextBoxFor(s => s.CompanyName, new { @class = "form-control", required = "required", value = Model.CompanyName , autocomplete = "off" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Phone):
        @Html.TextBoxFor(s => s.Phone, new { @class = "form-control", required = "required", value = Model.Phone, autocomplete = "off" })
    </div>
    <div class="display_flex_justify-content_space-around">
        <button type="submit" class="btn btn-primary">修改</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
    </div>
}
